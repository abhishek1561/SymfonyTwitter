{% extends 'base.html.twig' %}

{% block title %}LogIn in Twitter{% endblock %}

{% block body %}
 <section>
    <div class="container1">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {# {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %} #}

            <h1 class="logtwitter">Log in to Twitter</h1>
            {# <label for="inputEmail">Email</label> #}
            <div class="inputbox">
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" placeholder="Phone, email or username" class="phone" required autofocus>
            </div>
            <div class="inputbox">
            {# <label for="inputPassword">Password</label> #}
                <input type="password" name="password" id="inputPassword" class="password" placeholder="Password" autocomplete="current-password" required>
            </div>

            <div class="inputbox1">
                <div class="submitbox">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <button type="submit"class="logInBox">Log In</button>
                </div>
                <div class="remember">
                    <input type="checkbox" name="checkbox" id="checkBox" required><label for="checkBox">&nbsp;&nbsp;Remember me&nbsp;.&nbsp;&nbsp;</label>
                </div>
                <div class="forgotpassdiv">
                    <a href="{{asset('forgotPassword')}}" class="forgotpassword">Forgot password?</a>
                </div>
            </div>
        </form>
            <div class="newtwitter">New to Twitter? <a href="{{ path('app_register') }}" class="forgotpassword">Sign up now &rarr;</a></div>
    </div>
</section>
{% endblock %}
